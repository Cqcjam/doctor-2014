<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	   xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans        
	                       http://www.springframework.org/schema/beans/spring-beans.xsd
	                       http://code.alibabatech.com/schema/dubbo
	                       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<dubbo:application name="spring-dubbo-merge-provider" />

<!--  	<dubbo:registry address="multicast://224.5.6.7:1234?unicast=false" />  -->
	<dubbo:registry  protocol="zookeeper"  address="127.0.0.1:2181,127.0.0.1:2182,127.0.0.1:2183" client="zkclient" />

	<dubbo:protocol name="dubbo" port="20880" />

	<dubbo:service group="demonMerge1" interface="com.github.dubbo.common.demo.service.MergeService"	ref="mergeServiceOne" scope="remote"/>
	<dubbo:service group="demonMerge2" interface="com.github.dubbo.common.demo.service.MergeService"	ref="mergeService2" scope="remote"/>


</beans>